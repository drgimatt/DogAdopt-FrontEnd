<?xml version="1.0" encoding="utf-8"?>
<!-- This create a View for each item in the data set -->
<!-- The adapter inflates (creates a view from) this layout for each item and then populates it -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">


    <TextView
        android:id="@+id/dNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Milo"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dStatusTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingBottom="2sp"
        android:textStyle="bold"
        android:text="ADOPTED"
        android:textSize="16sp" />

    <Button
        android:id="@+id/item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:backgroundTint="@color/btn_bg"
        android:text="View Details"
        android:textSize="16sp" />


</LinearLayout>
